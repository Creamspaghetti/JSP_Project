<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyMapper">
	<!-- 전체 DB 조회후 productList.jsp에서 표시 -->
	<select id="getAllProducts" resultType="mydto">
		SELECT * FROM Products
	</select>

	<!-- refund.jsp에 DB에서 조회한 데이터 가지고 오기 -->
	<select id="getRefundedProducts" parameterType="string"
		resultType="mydto">
		SELECT * FROM ORDERED
		WHERE ORDER_NUM = #{orderNum}
	</select>

	<!-- order_num 주문내역의 번호로 조회 환불 페이지로 가는거 -->
	<!-- <select id="getRefund" resultType="mydto">
		SELECT *
		FROM ORDERED o
		JOIN Order_ ord ON o.ORDER_NUM = ord.ORDER_NUM
		JOIN PRODUCTS p ON ord.PRODUCT_ID = p.PRODUCT_ID
		WHERE o.ORDER_NUM = #{orderNum}
	</select> -->
	
	<select id="getImage" resultType="mydto">
		SELECT IMAGE_URL FROM PRODUCTS p 
		WHERE p.PRODUCT_ID = #{Image1}
	</select>

</mapper>
